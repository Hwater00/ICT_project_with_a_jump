<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context="com.example.sol.clock.DateActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="#232323"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="출입명부" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="이름" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="ex) 양예지" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="개인안심번호"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/UserNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="ex) 20가21나" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:text="거주지"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/LivePlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="ex) 서울특별시 도봉구 123-4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="현재 위치" />

            <EditText
                android:id="@+id/NowPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hint="ex) 국민떡볶이 덕성여대점" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="날짜 / 현재 시간" />

            <TextView
                android:id="@+id/Day"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="날짜 / 현재 시간" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="체온(선택)" />

            <EditText
                android:id="@+id/Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:hint="ex) 36.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="뒤로가기" />

            <Button
                android:id="@+id/ButtonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="작성하기" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
